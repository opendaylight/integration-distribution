      <groupId>org.opendaylight.integration</groupId>
      <version>${project.version}</version>
      <classifier>features</classifier>
      <type>xml</type>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <groupId>org.opendaylight.controller</groupId>
          <artifactId>opendaylight-karaf-empty</artifactId>
        </exclusion>
      </exclusions>
    </dependency>

