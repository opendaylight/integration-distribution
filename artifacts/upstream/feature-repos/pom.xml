        <dependencies>

            <!-- User facing feature repositories. -->

            <!-- AAA -->
            <dependency>
                <groupId>org.opendaylight.aaa</groupId>
                <artifactId>features-aaa</artifactId>
                <version>${aaa.version}</version>
                <classifier>features</classifier>
                <type>xml</type>
            </dependency>
            <dependency>
                <groupId>org.opendaylight.aaa</groupId>
                <artifactId>features-aaa-shiro</artifactId>
                <version>${aaa.version}</version>
